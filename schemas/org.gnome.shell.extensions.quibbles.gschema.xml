<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.quibbles" path="/org/gnome/shell/extensions/quibbles/">

    <!-- Top Panel Tweaks -->
    <key name="enable-workspace-indicator" type="b">
      <default>false</default>
      <summary>Enable the custom workspace indicator.</summary>
    </key>
    
    <!-- New setting for the Activities Button dropdown -->
    <key name="activities-button-mode" type="s">
      <default>'default'</default>
      <summary>How to handle the Activities Button.</summary>
      <choices>
        <choice value='default'/>
        <choice value='unclickable'/>
        <choice value='hidden'/>
      </choices>
    </key>

    <key name="remove-mouse-barrier" type="b">
      <default>true</default>
      <summary>Remove top-right corner mouse barrier.</summary>
    </key>
    
    <!-- Window Menu Tweak -->
    <key name="visible-items" type="as">
      <default>[
        "Scratch",
        "Take Screenshot",
        "Hide",
        "Maximize",
        "Move",
        "Resize",
        "Always on Top",
        "Always on Visible Workspace",
        "Move to Workspace Left",
        "Move to Workspace Right",
        "Move to Monitor Left",
        "Move to Monitor Right",
        "Close"
      ]</default>
      <summary>The window menu items to display.</summary>
    </key>

  </schema>
</schemalist>


